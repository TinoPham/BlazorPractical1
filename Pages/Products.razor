@page "/products"

<div class="row">
	<div class="col-md-5">
		<Search OnSearchChanged="SearchChanged"></Search>
	</div>
	<div class="col-md-5">
		<Sort OnSortChanged="SortChanged"></Sort>
	</div>
	<div class="col-md-2">
		<a href="/createProduct">Create Product</a>
	</div>
</div>

<div class="row">
	<div class="col">
		<ProductTable Products="ProductList"></ProductTable>
	</div>
</div>

<div class="row">
	<div class="col">
		<Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"></Pagination>
	</div>
</div>